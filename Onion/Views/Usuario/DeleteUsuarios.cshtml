@using Gestor.Core.Application.ViewModel.Usuario;
@model SaveUsuarioViewModel;
 

<dialog open>
  <article>
    <h3>¿Estas seguro?</h3>
    <p>
      Seguro que decea al usuario @Model.Nombre_de_usuario
    </p>
    <form method="post" asp-controller="Usuario" asp-action="DeletePost">
        <input type="hidden" asp-for="Id" />
        <footer>
          <button type="submit" class="delete"> Eliminar </button>
        <a role="button" asp-controller="Usuario" asp-action="Index" class="contrast">Volver</a>
        </footer>
    </form>
    
  </article>
</dialog>
