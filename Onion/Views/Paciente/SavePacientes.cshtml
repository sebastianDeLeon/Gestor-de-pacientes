@using Gestor.Core.Application.ViewModel.Paciente
@model SavePacienteViewModel

@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Salvar Paciente";
}
@if (editMode)
{
    <h2>Modo de edicion</h2>
}else{
    <h2>Modo de creacion</h2>
}
<form method="post" asp-controller="Paciente" asp-action=@(editMode ? "Edit":"Add")>
    <input type="hidden" asp-for="Id" />

    <label asp-for="cedula">Cedula
    <span asp-validation-for="cedula" class="text-danger"></span> 
    <input asp-for="cedula" />
    </label>

    <label asp-for="nombre">Nombre 
    <span asp-validation-for="nombre"></span> 
    <input asp-for="nombre" />
    </label>

    <label asp-for="apellido">Apellido
    <span asp-validation-for="apellido"></span> 
    <input asp-for="apellido" />
    </label>

    <label asp-for="direccion">Correo
    <span asp-validation-for="direccion"></span> 
    <input asp-for="direccion" type="email" />
    </label>

    <label asp-for="telefono">telefono
    <span asp-validation-for="telefono"></span> 
    <input asp-for="telefono" type="tel" />
    </label>

    <label asp-for="fecha_de_nacimiento">Fecha de nacimiento
    <span asp-validation-for="fecha_de_nacimiento"></span> 
    <input asp-for="fecha_de_nacimiento" type="datetime-local" />
    </label>

    <label asp-for="foto">Foto
    <span asp-validation-for="foto"></span> 
    <input type="text"  asp-for="foto" id="admin" checked/> 
    </label>

    <label asp-for="alergico">Es alergico
    <span asp-validation-for="alergico"></span> 
    <input type="checkbox"  asp-for="alergico" /> 
    </label>

    <label asp-for="fumador">Es alergico
    <span asp-validation-for="fumador"></span> 
    <input type="checkbox"  asp-for="fumador" />
    </label>

    <label >¿Acepta ceder gratuitamente de su alma, cuenta bancaria y de tenerla libreria de steam por esta cuenta?
    <input type="checkbox" required checked/>
    @*<label for="admin">Admin</label>*@
    </label>

    <button type="submit" >Submit</button>
</form>